from flask import Flask,jsonify
from redis import Redis
import os

app = Flask(__name__)
redis = Redis(host='redismaster', port=6379)

@app.route('/')
def hello():
    redis.incr('hits')
    json_data = {'name': 'watch'}
    return jsonify(json_data)    

if __name__ == "__main__":
    app.run(host="0.0.0.0", debug=True)
